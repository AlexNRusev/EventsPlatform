@using EventsPlatform.Models.Enums
@model EventsPlatform.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var asd = ViewBag.Error;
}
<h2 class="text-info pl-3">Създай събитие</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventStartDate" class="control-label"></label>
                <input asp-for="EventStartDate" class="form-control" />
                <span asp-validation-for="EventStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventEndDate" class="control-label"></label>
                <input asp-for="EventEndDate" class="form-control" />
                <span asp-validation-for="EventEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxNumberOfParticipants" class="control-label"></label>
                <input asp-for="MaxNumberOfParticipants" class="form-control" />
                <span asp-validation-for="MaxNumberOfParticipants" class="text-danger"></span>
            </div>
            <div class="form-group" id="group-event-type">
                <label asp-for="EventType" class="control-label"></label>
                <select asp-for="EventType" asp-items="Html.GetEnumSelectList<EventType>()" class="form-control" onchange="changeInputs()"></select>
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group" id="group-location-town" style="display: none;">
                <label asp-for="Location.Town" class="control-label"></label>
                <input asp-for="Location.Town" class="form-control" />
                <span asp-validation-for="Location.Town" class="text-danger"></span>
            </div>
            <div class="form-group" id="group-location-street" style="display: none;">
                <label asp-for="Location.Street" class="control-label"></label>
                <input asp-for="Location.Street" class="form-control" />
                <span asp-validation-for="Location.Street" class="text-danger"></span>
            </div>
            <div class="form-group" id="group-location-otherdetails" style="display: none;">
                <label asp-for="Location.OtherDetails" class="control-label"></label>
                <input asp-for="Location.OtherDetails" class="form-control" />
                <span asp-validation-for="Location.OtherDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/create.js" asp-append-version="true"></script>
